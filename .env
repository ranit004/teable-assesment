TIMEZONE=UTC

# ─── PostgreSQL ──────────────────────────────────────────────────────────────
POSTGRES_HOST=teable-db
POSTGRES_PORT=5432
POSTGRES_DB=teable
POSTGRES_USER=teable
POSTGRES_PASSWORD=teable@secret123

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_HOST=teable-cache
REDIS_PORT=6379
REDIS_PASSWORD=redis@secret123

# ─── Application ─────────────────────────────────────────────────────────────
# Public URL visible to users — change if deploying on a remote host
PUBLIC_ORIGIN=http://localhost:3000

# Database connection string (Prisma / backend)
PRISMA_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis connection URI (NestJS backend cache)
BACKEND_CACHE_REDIS_URI=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# Exposes the Postgres port so the in-app "database connection" feature works
PUBLIC_DATABASE_PROXY=localhost:5432

# ─── Secret ──────────────────────────────────────────────────────────────────
# Change this to a long, random string in production!
SECRET_KEY=change_me_to_a_random_secret_at_least_32_chars

# ─── SMTP (disabled — no email required) ─────────────────────────────────────
# Uncomment and fill in if you want email support:
# BACKEND_MAIL_HOST=smtp.example.com
# BACKEND_MAIL_PORT=465
# BACKEND_MAIL_SECURE=true
# BACKEND_MAIL_SENDER=noreply@example.com
# BACKEND_MAIL_SENDER_NAME=Teable
# BACKEND_MAIL_AUTH_USER=username
# BACKEND_MAIL_AUTH_PASS=password